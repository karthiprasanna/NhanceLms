<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/test_pre_subject_common_side_padding"
        android:paddingRight="@dimen/test_pre_subject_common_side_padding" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/test_pre_subject_format_head_margin_bottom"
            android:layout_marginTop="@dimen/test_pre_subject_format_head_margin_top"
            android:text="@string/format_caps"
            android:textColor="@color/darkergrey"
            android:textSize="@dimen/test_pre_subject_format_head_font_size"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:visibility="gone"
                style="@style/test_pre_subject_stats_holder"
                android:layout_marginRight="1dp" >

                <TextView
                    android:id="@+id/assignment_pre_subject_marks"
                    style="@style/test_pre_subject_stats_number" />

                <TextView
                    style="@style/test_pre_subject_stats_text"
                    android:text="@string/attempts_caps" />
            </LinearLayout>

            <LinearLayout style="@style/test_pre_subject_stats_holder" >

                <TextView
                    android:id="@+id/assignment_pre_subject_page_question_count"
                    style="@style/test_pre_subject_stats_number" />

                <TextView
                    style="@style/test_pre_subject_stats_text"
                    android:text="@string/questions_caps" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/assignment_pre_qtypes_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lightergrey"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="@color/white_trans_80"
                android:orientation="horizontal" >

                <TextView
                    style="@style/test_pre_subject_ques_types_head"
                    android:layout_weight="0.34"
                    android:paddingLeft="@dimen/test_pre_subject_ques_types_head_side_padding"
                    android:text="@string/type_caps" />

                <TextView
                    style="@style/test_pre_subject_ques_types_head"
                    android:layout_weight="0.38"
                    android:gravity="center"
                    android:text="@string/marks_caps" />

                <TextView
                    style="@style/test_pre_subject_ques_types_head"
                    android:layout_weight="0.28"
                    android:gravity="center"
                    android:paddingRight="@dimen/test_pre_subject_ques_types_head_side_padding"
                    android:text="@string/questions_caps" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/assignment_pre_subject_curriculum_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/test_pre_subject_curriculum_margin_bottom"
            android:layout_marginTop="@dimen/test_pre_subject_curriculum_margin_top"
            android:text="@string/curriculum_caps"
            android:textColor="@color/darkergrey"
            android:textSize="@dimen/test_pre_subject_curriculum_font_size"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/assignment_pre_subject_topics_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        </LinearLayout>
    </LinearLayout>

</ScrollView>