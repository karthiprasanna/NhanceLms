<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightestgrey"
    android:orientation="vertical"
    tools:context=".SingleQuestionActivity" >

    <Button
        android:id="@+id/view_solution_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@color/grey"
        android:gravity="center"
        android:paddingBottom="@dimen/post_doubt_pad_bottom"
        android:paddingTop="@dimen/post_doubt_pad_top"
        android:text="@string/view_solution"
        android:textColor="@color/white"
        android:textSize="@dimen/post_doubt_text_size"
        android:textStyle="bold" />

    <WebView
        android:id="@+id/single_question_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/view_solution_btn"
        android:layout_alignParentTop="true"
        android:background="@color/white" />

</RelativeLayout>