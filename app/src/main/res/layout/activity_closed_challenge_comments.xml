<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nhance.android.assignment.StudentPerformance.ShowCommentActivity">

    <TextView
        android:id="@+id/closed_emptymsg_comment_solution"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="No comment Available."
        android:textSize="@dimen/assignmet_text_size" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/closed_swipelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linearLayout">

    </android.support.v4.widget.SwipeRefreshLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/closed_comments_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

    </android.support.v7.widget.RecyclerView>

    <EditText

        android:id="@+id/closed_post_assignment_comment"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"

        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@+id/chatSendButton"
        android:background="@drawable/rounded_corner2_editext"
        android:gravity="top|left"
        android:hint="Type message:"
        android:inputType="textMultiLine"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:overScrollMode="always"
        android:paddingLeft="20dp"
        android:scrollbarStyle="insideInset"
        android:scrollbars="vertical"
        android:singleLine="false"
        android:layout_marginBottom="10dp"


        />

    <ImageView
        android:id="@+id/closed_comment_send_btn"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
android:layout_marginBottom="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:paddingLeft="6dp"
        android:src="@drawable/send_icon"


        />


</RelativeLayout>
