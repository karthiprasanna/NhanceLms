<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5FA"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/test_pre_subject_common_side_padding"
        android:paddingRight="@dimen/test_pre_subject_common_side_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/test_pre_subject_format_head_margin_bottom"
            android:layout_marginTop="@dimen/test_pre_subject_format_head_margin_top"
            android:text="@string/format_caps"
            android:textColor="@color/darkergrey"
            android:textSize="@dimen/test_pre_subject_format_head_font_size"
            android:textStyle="bold" />

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="10dp"
            card_view:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:orientation="horizontal">

                <LinearLayout
                    style="@style/test_pre_subject_stats_holder"
                    android:layout_marginRight="1dp">

                    <TextView
                        style="@style/test_pre_subject_stats_text"
                        android:text="@string/marks_caps" />

                    <TextView
                        android:id="@+id/test_pre_subject_marks"
                        style="@style/test_pre_subject_stats_number"
                        android:paddingLeft="10dp"
                        android:textColor="@color/darkyellow" />


                </LinearLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/grey" />

                <LinearLayout style="@style/test_pre_subject_stats_holder">

                    <TextView
                        style="@style/test_pre_subject_stats_text"
                        android:text="@string/questions_caps" />

                    <TextView
                        android:id="@+id/test_pre_subject_page_question_count"
                        style="@style/test_pre_subject_stats_number"
                        android:paddingLeft="10dp"
                        android:textColor="@color/grey" />


                </LinearLayout>


            </LinearLayout>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:id="@+id/test_pre_qtypes_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F5F5FA"
            android:orientation="vertical"
            android:paddingTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="@color/white_trans_80"
                android:orientation="horizontal">

                <TextView
                    style="@style/test_pre_subject_ques_types_head"
                    android:layout_weight="0.34"
                    android:paddingLeft="@dimen/test_pre_subject_ques_types_head_side_padding"
                    android:text="@string/type_caps" />

                <TextView
                    style="@style/test_pre_subject_ques_types_head"
                    android:layout_weight="0.38"
                    android:gravity="center"
                    android:text="@string/marks_caps" />

                <TextView
                    style="@style/test_pre_subject_ques_types_head"
                    android:layout_weight="0.28"
                    android:gravity="center"
                    android:paddingRight="@dimen/test_pre_subject_ques_types_head_side_padding"
                    android:text="@string/questions_caps" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/test_pre_subject_curriculum_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/test_pre_subject_curriculum_margin_bottom"
            android:layout_marginTop="@dimen/test_pre_subject_curriculum_margin_top"
            android:text="@string/curriculum_caps"
            android:textColor="@color/darkergrey"
            android:textSize="@dimen/test_pre_subject_curriculum_font_size"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/test_pre_subject_topics_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"></LinearLayout>
    </LinearLayout>

</ScrollView>