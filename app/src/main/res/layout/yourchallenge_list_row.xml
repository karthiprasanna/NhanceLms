<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginBottom="5dp"
    android:clickable="true"
    cardview:cardCornerRadius="10dp"
    cardview:cardElevation="2dp"


    cardview:cardUseCompatPadding="true">


    <RelativeLayout
        android:layout_marginBottom="5dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cc_date"
        android:paddingTop="10dp">



        <RelativeLayout
            android:id="@+id/acre1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cc_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/channelname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="Channel name"
                android:singleLine="true"
                android:textStyle="bold"
                android:textSize="@dimen/challenge_text_size"
                android:textColor="#33B5E5" />

            <LinearLayout
                android:layout_below="@+id/channelname"
                android:id="@+id/connection_id"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <RelativeLayout
                    android:gravity="left"
                    android:layout_gravity="left"
                    android:id="@+id/status_id"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Level:"
                        android:textSize="@dimen/challenge_text_size"
                        android:textColor="#666"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/leveltext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/level"
                        android:text=""
                        android:textSize="@dimen/challenge_text_size"
                        android:textColor="#666" />



                    <TextView
                        android:paddingLeft="5dp"
                        android:id="@+id/attempts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/level"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/timeleft"
                        android:text="Attempts:"
                        android:textStyle="bold"
                        android:textSize="@dimen/challenge_text_size"
                        android:textColor="#666" />

                    <TextView
                        android:id="@+id/attemptstext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/leveltext"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/attempts"
                        android:text=""
                        android:textSize="@dimen/challenge_text_size"
                        android:textColor="#666" />
                </RelativeLayout>

                <LinearLayout

                    android:id="@+id/img_id"
                    android:paddingRight="10dp"
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <ImageView
                        android:id="@+id/status_img"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        />

                </LinearLayout>


            </LinearLayout>




            <TextView
                android:id="@+id/acsubject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/connection_id"
                android:paddingLeft="10dp"
                android:text="subject:"
                android:textStyle="bold"
                android:textSize="@dimen/challenge_text_size"
                android:textColor="#666" />

            <TextView
                android:id="@+id/acsubjecttext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/connection_id"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/acsubject"
                android:text=""
                android:textSize="@dimen/challenge_text_size"
                android:textColor="#666" />

            <TextView
                android:id="@+id/actopic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/acsubject"
                android:paddingLeft="10dp"

                android:text="Topic:"
                android:textStyle="bold"
                android:textSize="@dimen/challenge_text_size"
                android:textColor="#666" />

            <TextView
                android:id="@+id/actopictext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/acsubject"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/actopic"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:text="sssssssssssshhhhhhhhhhhhhsssslllllllllllllllssssssssssss"
                android:textSize="@dimen/challenge_text_size"
                android:textColor="#666" />


            <TextView
                android:id="@+id/challengetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/actopictext"
                android:paddingLeft="10dp"
                android:text="Challenge Time:"
                android:textSize="@dimen/challenge_text_size"
                android:textColor="#666"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/challengetime_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/actopictext"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/challengetime"
                android:text=""
                android:textSize="@dimen/challenge_text_size"
                android:textColor="#666" />



            <RelativeLayout
                android:paddingTop="5dp"
                android:id="@+id/topper_layout"
                android:layout_below="@+id/challengetime_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner2"
 >

                <RelativeLayout
                    android:id="@+id/button_position"
                    android:layout_width="wrap_content"
                    android:background="@color/grey"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/your_view_challenge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="10dp"
                        android:background="@color/grey"
                        android:textAllCaps="false"
                        android:textSize="@dimen/challenge_text_size"
                        android:text="View Challenge"
                        android:textColor="@color/white" />
                </RelativeLayout>

                <RelativeLayout
                    android:gravity="center"
                    android:id="@+id/points_table"
                    android:layout_toRightOf="@+id/button_position"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/pointstext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="10dp"
                        android:textAllCaps="false"
                        android:layout_toRightOf="@+id/cc_view_challenge"
                        android:textSize="@dimen/challenge_text_size"
                        android:text=""
                        android:textColor="@color/white" />
                </RelativeLayout>

            </RelativeLayout>


        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/acre1"
            android:id="@+id/downarraow"
            android:src="@drawable/icon_arrow_down"/>

<LinearLayout
    android:layout_marginTop="15dp"
    android:visibility="gone"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:background="@drawable/custom_layout_border"
    android:orientation="vertical"
    android:id="@+id/border_layout"
    android:layout_below="@+id/downarraow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <LinearLayout
             android:id="@+id/success_point"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/layout_action1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_gravity="center"

                android:weightSum="2">



                <TextView
                    android:id="@+id/exam_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/challenge_text_size" />


            </LinearLayout>

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/light_gray" />

            <LinearLayout
                android:id="@+id/layout_action2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="2">


                <TextView
                    android:id="@+id/pointsearned"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Points Earned"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/challenge_text_size"  />
                <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:id="@+id/point_multiply"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/challenge_text_size"  />
                <TextView
                    android:id="@+id/text_points_earned"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="100000000"
                    android:textColor="@color/black"
                    android:textSize="@dimen/challenge_text_size"  />
            </LinearLayout>

        </LinearLayout>
        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/success_point"

            android:background="@color/light_gray" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_below="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:padding="10dp"
                android:id="@+id/layout_action3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="2">


                <TextView
                    android:id="@+id/timetaken"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time Taken"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/challenge_text_size"  />

                <TextView
                    android:id="@+id/text_timetaken"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="10mins"
                    android:textColor="@color/black"
                    android:textSize="@dimen/challenge_text_size"  />


            </LinearLayout>

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/light_gray" />

            <LinearLayout
                android:padding="10dp"

                android:id="@+id/layout_action4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="2">


                <TextView
                    android:id="@+id/hinttaken"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hints Taken"
                    android:textColor="@color/red"
                    android:textSize="@dimen/challenge_text_size" />

                <TextView
                    android:id="@+id/text_hinttaken"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="@dimen/challenge_text_size" />

            </LinearLayout>

        </LinearLayout>



</LinearLayout>


        <ImageView
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/border_layout"
            android:id="@+id/uparraow"
            android:src="@drawable/icon_arrow_up"/>


    </RelativeLayout>

</android.support.v7.widget.CardView>

