<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AskDoubtActivity"
    android:orientation="vertical"
    android:background="@color/lightestgrey">
    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@color/lightestgrey">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:orientation="vertical">

		    <WebView
		        android:id="@+id/ask_doubt_container"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_gravity="top"
		        android:background="@color/lightestgrey"
		        android:minHeight="@dimen/ask_doubt_webview_min_height" />

		    <Button
		        android:id="@+id/post_doubt_btn"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center"
		        android:gravity="center"
		        android:textColor="@color/white"
		        android:text="@string/post_doubt"
		        android:textStyle="bold"
		        android:background="@drawable/selector_green_bg"
		        android:textSize="@dimen/post_doubt_text_size"
		        android:paddingTop="@dimen/post_doubt_pad_top"
		        android:paddingBottom="@dimen/post_doubt_pad_bottom"
		        android:visibility="gone"
		        android:layout_marginLeft="@dimen/post_doubt_margin_left"
		        android:layout_marginRight="@dimen/post_doubt_margin_left"
		        />
    	</LinearLayout>
    </ScrollView>
</LinearLayout>
