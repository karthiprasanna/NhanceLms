<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.CardView android:id="@+id/card_view"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"

        card_view:cardCornerRadius="6dp"
        card_view:cardElevation="4dp"
        android:layout_marginTop="7dp">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/module_content_height"
    android:layout_marginBottom="1dp"
   >


    <ImageView
        android:id="@+id/module_content_navigator"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/module_content_navigator_margin_right"
        android:contentDescription="@string/img"
        android:padding="@dimen/module_content_navigator_padding"
        android:src="@drawable/icon_arrow_module_content" />

    <TextView
        android:id="@+id/module_content_title_count"
        style="@style/module_entry_title"
        android:layout_marginLeft="@dimen/module_content_title_count_margin_left"
        android:layout_marginRight="@dimen/module_content_title_count_margin_right"
        android:text="1." />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/module_content_title_section_margin_right"
        android:layout_toLeftOf="@id/module_content_navigator"
        android:layout_toRightOf="@id/module_content_title_count"
        android:orientation="vertical"
        android:paddingBottom="3dp" >

        <TextView
            android:id="@+id/module_content_title"
            style="@style/module_entry_title"
            android:layout_marginTop="0dp"
            android:text="Thermodynamics" />

        <TextView
            android:id="@+id/module_content_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_small_document"
            android:drawablePadding="@dimen/module_content_state_drawable_padding"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="Read"
            android:textColor="@color/lightgrey"
            android:textSize="@dimen/module_content_state_font_size" />
    </LinearLayout>

</RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>