<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_page_white_bkg" >

    <ImageView
        android:id="@+id/login_page_image"
        android:layout_width="@dimen/login_insti_image_width"
        android:layout_height="@dimen/login_insti_image_height"
        android:layout_centerInParent="true"
        android:contentDescription="@string/img" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/login_landing_page_swipe_margin_bottom"
        android:drawableLeft="@drawable/icon_navigation_previous_item"
        android:drawablePadding="@dimen/login_landing_page_swipe_drawable_padding"
        android:gravity="center_vertical"
        android:text="@string/swipe"
        android:textColor="@color/lightgrey"
        android:textSize="@dimen/login_landing_page_swipe_font_size" />

</RelativeLayout>