<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginRight="7dp"
    android:clickable="true"
    cardview:cardCornerRadius="2dp"
    cardview:cardElevation="2dp"
    cardview:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">


        <RelativeLayout
            android:id="@+id/ddd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/level_attempt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/result_channelname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="Channel name"
                    android:textColor="#33B5E5"
                    android:textSize="@dimen/challenge_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:layout_below="@+id/result_channelname"
                    android:text="Level:"
                    android:textColor="#666"
                    android:textSize="@dimen/challenge_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/result_leveltext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/result_channelname"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/level"
                    android:text=""
                    android:textColor="#666"
                    android:textSize="@dimen/challenge_text_size" />

                <TextView
                    android:id="@+id/attempts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/level"
                    android:paddingLeft="10dp"
                    android:text="Attempts:"
                    android:textColor="#666"
                    android:textSize="@dimen/challenge_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/result_attemptstext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/result_leveltext"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/attempts"
                    android:text=""
                    android:textColor="#666"
                    android:textSize="@dimen/challenge_text_size" />

                <RelativeLayout
                    android:id="@+id/timeleft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true">

                    <ProgressBar
                        android:id="@+id/result_progressBarCircle"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:indeterminate="false"
                        android:max="100"
                        android:progress="100"
                        android:progressDrawable="@drawable/drawable_circle_yellow"
                        android:secondaryProgress="100"

                        />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="right"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/result_challenge_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="1"
                            android:lineSpacingMultiplier=".85"
                            android:text="12:24:20"
                            android:textColor="@color/black"
                            android:textSize="14dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="1"

                            android:text="Hrs Left"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/test_analytics_common_text_size"
                            android:textStyle="bold" />
                    </LinearLayout>
                </RelativeLayout>



            </RelativeLayout>


        </RelativeLayout>
        <TextView
            android:id="@+id/acsubject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ddd"
            android:paddingLeft="10dp"

            android:text="Subject:"
            android:textSize="@dimen/challenge_text_size"
            android:textColor="#666"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/result_acsubjecttext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ddd"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/acsubject"
            android:text=""
            android:textSize="@dimen/challenge_text_size"
            android:textColor="#666" />

        <TextView
            android:id="@+id/actopic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/acsubject"
            android:paddingLeft="10dp"
            android:text="Topic:"
            android:textSize="@dimen/challenge_text_size"
            android:textColor="#666"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/result_actopictext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/acsubject"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"

            android:layout_toRightOf="@id/actopic"
            android:singleLine="true"
            android:text="sssssssssssshhhhhhhhhhhhhsssslllllllllllllllssssssssssss"
            android:textSize="@dimen/challenge_text_size"
            android:textColor="#666" />


        <TextView
            android:id="@+id/challengetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/actopic"
            android:paddingLeft="10dp"
            android:text="Challenge Time:"
            android:textSize="@dimen/challenge_text_size"
            android:textColor="#666"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/result_challengetime_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/actopic"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/challengetime"
            android:text=""
            android:textSize="@dimen/challenge_text_size"
            android:textColor="#666" />
        <TextView
            android:textSize="@dimen/challenge_text_size"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="challenge"
            android:id="@+id/result_challenge_id"/>


        <RelativeLayout
            android:layout_below="@+id/result_challengetime_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
>


            <RelativeLayout
                android:id="@+id/points_table"
                android:layout_toRightOf="@+id/button_position"
                android:background="@color/light_yellow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:visibility="visible"
                    android:id="@+id/result_pointstext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:padding="10dp"
                    android:layout_toRightOf="@+id/cc_view_challenge"
                    android:text=""
                    android:maxLines="1"
                    android:maxWidth="@dimen/test_rank_list_item_rank_user_name_max_width"
                    android:textAllCaps="false"
                    android:textColor="@color/darkestgrey"
                    android:textSize="@dimen/challenge_text_size" />
            </RelativeLayout>

        </RelativeLayout>



    </RelativeLayout>
</android.support.v7.widget.CardView>

