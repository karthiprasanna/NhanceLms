<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"

    android:padding="20dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/ass_thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/default_profile_pic"

            android:layout_gravity="left"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/name"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/ass_firstname"
            android:text=""
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
android:layout_marginBottom="10dp"
            android:textSize="20dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"

        android:layout_marginTop="20dp"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/ass_profile"
            android:textSize="20dp"

            />

        <TextView
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ass_dot"
            android:textSize="20dp"

            android:text=","/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ass_name"
            android:textSize="20dp"
            android:text=""/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/process"
        android:layout_below="@+id/name"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        >
        <ProgressBar
            android:id="@+id/pb_drawable"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@android:style/Widget.Holo.ProgressBar.Horizontal"

            android:progressDrawable="@drawable/progress_states"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/process"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:paddingTop="5dp"
            android:id="@+id/assignment_correct_qus_count_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/test_analytics_question_status_bar_width"
            android:gravity="center"
            android:orientation="horizontal" >


            <TextView
                android:id="@+id/ass_correct"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dummy_number"
                android:textColor="@color/green"
                android:textSize="@dimen/test_analytics_common_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/test_analytics_common_margin"
                android:text="@string/correct"
                android:textColor="@color/green"
                android:textSize="@dimen/test_analytics_common_text_size" />
        </LinearLayout>

        <LinearLayout
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/test_analytics_question_status_bar_width"
            android:orientation="horizontal" >


            <TextView
                android:id="@+id/ass_incorrect"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/red"
                android:textSize="@dimen/test_analytics_common_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/test_analytics_common_margin"
                android:text="@string/incorrect"
                android:textColor="@color/red"
                android:textSize="@dimen/test_analytics_common_text_size" />
        </LinearLayout>

    </LinearLayout>






</RelativeLayout>
